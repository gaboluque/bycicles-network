<div class="login-form row justify-content-md-center">
    <form action="/forgot-password" method="post" class="col col-md-4 mt-5">
        <h2 class="text-center">Forgot password</h2>   
        <div class="text-danger text-center">{{info.message}}</div>
        <div class="form-group">
            <input type="email" name="email" class="form-control" placeholder="Email" required="required">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Recover password</button>
        </div>
    </form>
</div>
