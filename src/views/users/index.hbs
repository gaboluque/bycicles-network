<block class="content">
  <h1>Users</h1>
  <a href="/users/new">New</a>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Email</th>
        <th scope="col">Name</th>
        <th scope="col">Verified</th>
      </tr>
    </thead>
    <tbody>
      {{#each users as | user |}}
      <tr scope="row">
        <td>{{ email }}</td>
        <td>{{ name }}</td>
        <td>{{ userContext.verified }}</td>
        <td><a href="/users/{{_id}}/edit" class="btn btn-sm">Edit</a></td>
      </tr>
      {{/ each}}
    </tbody>
  </table>
</block>
